#!/bin/sh
TOP="$(cd $(dirname "$0")/../..; pwd)"

# first load the paths. These have been generated from the configure/RELEASE
# tree. If we have a -d arg then load the opi/edl paths first
shopt -s nullglob
unset EDMDATAFILES
if [ "$1" = "-d" ]; then
    for d in ${TOP}/*App/opi/edl; do
        EDMDATAFILES="${EDMDATAFILES}${d}:"
    done
    EDMDATAFILES="${EDMDATAFILES}${TOP}/data:"
    EDMDATAFILES="${EDMDATAFILES}/dls_sw/prod/R3.14.12.3/support/BLGui/3-11/BLGuiApp/opi/edl:"
    EDMDATAFILES="${EDMDATAFILES}/dls_sw/prod/R3.14.12.3/support/adUtil/2-3/adUtilApp/opi/edl:"
    EDMDATAFILES="${EDMDATAFILES}/home/fwf58757/git/zebra2/pandabox/pandaboxApp/opi/edl:"

    OPTS="-x -eolc"
else
    OPTS="-x -eolc -noedit"
fi
EDMDATAFILES="${EDMDATAFILES}${TOP}/data"
EDMDATAFILES="${EDMDATAFILES}:/dls_sw/prod/R3.14.12.3/support/ADCore/2-3dls3/data"
EDMDATAFILES="${EDMDATAFILES}:/dls_sw/prod/R3.14.12.3/support/BLGui/3-11/data"
EDMDATAFILES="${EDMDATAFILES}:/dls_sw/prod/R3.14.12.3/support/adUtil/2-3/data"
EDMDATAFILES="${EDMDATAFILES}:/dls_sw/prod/R3.14.12.3/support/ffmpegServer/3-0dls0-3/data"
EDMDATAFILES="${EDMDATAFILES}:/home/fwf58757/git/zebra2/pandabox/data"

export EDMDATAFILES

# Set the path to include any scripts in data dirs
export PATH=${EDMDATAFILES}:${PATH}
edm ${OPTS}  exampleTop.edl